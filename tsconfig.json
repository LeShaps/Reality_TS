{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "lib":[
            "es2017",
            "ESNext.AsyncIterable",
            "DOM"
        ],
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules"
    ]
}